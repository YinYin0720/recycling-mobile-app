<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".activity.AppInfoActivity">
	
	<ImageView
			android:id="@+id/backBtn"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_marginVertical="2dp"
			android:layout_marginHorizontal="12dp"
			app:srcCompat="@drawable/ic_baseline_arrow_circle_left_24"
			app:tint="@color/apple_green" />
	
	
	<TextView
			android:id="@+id/redeemNameList"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:fontFamily="@font/playfair_display_black"
			android:text="How the recycling works?"
			android:textColor="@color/black"
			android:paddingVertical="30dp"
			android:textSize="24sp" />
	
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="50dp"
				android:orientation="vertical">
			
			
			<ImageView
					android:id="@+id/redeemImgList"
					android:layout_width="match_parent"
					android:layout_height="250dp"
					android:layout_gravity="center"
					android:layout_marginVertical="10dp"
					android:background="@drawable/border_step"
					app:srcCompat="@drawable/step1" />
			
			<ImageView
					android:id="@+id/img2"
					android:layout_width="match_parent"
					android:layout_height="250dp"
					android:layout_gravity="center"
					android:layout_marginVertical="10dp"
					android:background="@drawable/border_step"
					app:srcCompat="@drawable/step2" />
			
			<ImageView
					android:id="@+id/img3"
					android:layout_width="match_parent"
					android:layout_height="250dp"
					android:layout_gravity="center"
					android:layout_marginVertical="10dp"
					android:background="@drawable/border_step"
					app:srcCompat="@drawable/step3" />
		
		
		</LinearLayout>
	</ScrollView>


</LinearLayout>